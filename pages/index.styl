@import '../mixins/common.styl'

.host
  display: flex
  background-color: $primary-color
  color: $primary-text
.left
  display: flex
  flex-direction: column
  flex: 8
  header
    display: flex
    justify-content: center
    padding: 1em 1em .5em
    height: 720px
  footer
    display: flex
    justify-content: center
    padding: .5em 1em 1em
    section
      display: flex
      flex-direction: column
      .filters
        display: flex
        .toggles
          display: flex
          .toggle
            display: flex
            align-items: center
            margin-right: 1em
            text-transform: capitalize
            input
              margin-right: .5em
    .explanation
      min-height: 30px
      display: flex
      section
        display: flex
        flex-direction: column
        flex: 1
        span
          font-size: .8em
          &.text
            color: $primary-text-hue
          &.guests
            font-weight: 700
            &.included.inclusion
              color: $success
            &.excluded, &.exclusion
              color: $danger
    .guests
      display: flex
      flex-wrap: wrap
      .guest
        display: flex
        flex-direction: column
        align-items: center
        position: relative
        margin: 1em 1em 1.2em
        user-select: none
        cursor: pointer
        min-height: 150px
        max-height: 150px
        min-width: 150px
        max-width: 150px
        text-align: center
        .name
          display: flex
          flex-direction: column
          align-items: center
          line-height: 15px
          margin-top: 5px
          span
            font-size: .8em
        img
          width: 128px
          height: 128px
          min-width: 128px
          min-height: 128px
          border-radius: 50%
        &.excluded:before
          position: absolute
          top: 0
          left: 37px
          line-height: 128px
          font-size: 8em
          font-weight: 700
          color: $danger
          content: "X"
        &.included:before
          position: absolute
          top: 0
          left: 105px
          line-height: 45px
          font-size: 3em
          font-weight: 700
          color: $success
          content: "âœ“"
        &.disabled, &.excluded
          img
            opacity: .4
            filter: grayscale(1)
.right
  position: relative
  min-width: 300px
  padding: 1em
  .list
    display: flex
    flex-direction: column
    position: fixed
    top: 0
    right: 0
    min-width: 300px
    padding: 1em
    flex: 2
    font-size: .9em
    overflow-y: auto
    max-height: 97vh
    &::-webkit-scrollbar
      display: none
    .btns
      display: flex
      margin-bottom: .5em
      min-height: 42px
      justify-content: space-between
      .btn
        flex: 1
        &:first-child
          margin-right: 10px
    .counts
      display: flex
      justify-content: flex-end
      span, b
        margin-right: 5px
    .video
      span
        cursor: pointer
        color: $primary-text
        text-decoration: underline
